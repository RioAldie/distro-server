generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username String @id @db.VarChar(100)
  password String @db.VarChar(100)
  email String? @db.VarChar(100)
  token String? @db.VarChar(100)
  orders Order[]
  @@map("users")
}

model Cloth{
  name String @db.VarChar(100)
  id String @id @db.VarChar(100) 
  price Float @db.Real()
  image String? @db.VarChar(100)
  createAt String? @db.VarChar(100)
  stock Int @db.Integer()
  // voucher Voucher[]
  orders Order[]

  @@map("Clothes")
}
model Order{
  id String @id @db.VarChar(100) @default(uuid())
  createAt DateTime @db.Date()
  idClothes String @db.VarChar(100)
  amount Int @db.Integer()
  totalPrice Float @db.DoublePrecision()
  clothes Cloth @relation(fields: [idClothes], references: [id])
  username String @db.VarChar(100)
  user User @relation(fields: [username], references: [username])

  @@map("Orders")
}
